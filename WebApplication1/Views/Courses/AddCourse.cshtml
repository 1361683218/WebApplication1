@model WebApplication1.Models.Course

@{
    ViewData["Title"] = "添加课程";
}

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" type="text/css" href="~/css/Depts.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        .centered-form {
            display: flex;
            justify-content: center;
            height: 100vh;
        }
    </style>
</head>
<body>
    <div class="centered-form">
        <div class="col-md-4">
            <form asp-action="AddCourse" class="form-container">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
                    <label asp-for="CourseCode" class="control-label">课程代码</label>
        <input asp-for="CourseCode" class="form-control" />
        <span asp-validation-for="CourseCode" class="text-danger"></span>
    </div>
    <div class="form-group">
                    <label asp-for="CourseName" class="control-label">课程名称</label>
        <input asp-for="CourseName" class="form-control" />
        <span asp-validation-for="CourseName" class="text-danger"></span>
    </div>
    <div class="form-group">
                    <label asp-for="Credits" class="control-label">学分</label>
        <input asp-for="Credits" class="form-control" />
        <span asp-validation-for="Credits" class="text-danger"></span>
    </div>
    <div class="form-group">
                    <input type="submit" value="保存" class="btn btn-primary" />
    </div>
</form>
            <div class="back-to-list">
                <a asp-action="ShowAllCourse">返回列表</a>
            </div>
        </div>
    </div>

<div>
    <a asp-action="ShowAllCourse">Back to List</a>
</div>

</body>
</html>