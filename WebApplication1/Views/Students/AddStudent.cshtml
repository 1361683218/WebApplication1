@model WebApplication1.Models.Student

@{
    ViewData["Title"] = "添加学生";
}

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" type="text/css" href="~/css/Depts.css">
    <style>
        .centered-form {
            display: flex;
            justify-content: center;

            height: 100vh;
        }
    </style>
</head>
<body>
    <div class="centered-form">
    <div class="col-md-4">
            <form asp-action="AddStudent" class="form-container">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                    <label asp-for="Id" class="control-label">学生编号</label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="Name" class="control-label">姓名</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="ClassName" class="control-label">班级</label>
                <input asp-for="ClassName" class="form-control" />
                <span asp-validation-for="ClassName" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="InitialPassword" class="control-label">初始密码</label>
                <input asp-for="InitialPassword" class="form-control" />
                <span asp-validation-for="InitialPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <input type="submit" value="创建" class="btn btn-primary" />
            </div>
        </form>
            <div class="back-to-list">
                <a asp-action="ShowAllStudent">返回列表</a>
            </div>
    </div>
</div>

<div>
    <a asp-action="ShowAllStudent">Back to List</a>
</div>

</body>
</html>