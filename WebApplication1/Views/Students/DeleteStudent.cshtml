@model WebApplication1.Models.Student

@{
    ViewData["Title"] = "删除学生";
}

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" type="text/css" href="~/css/Depts.css">
    <style>
        .centered-form {
            display: flex;
            justify-content: center;
            margin-top: 20px; /* 调整这个值来控制表单在垂直方向上的位置 */
        }
    </style>
</head>
<body>
    <div class="centered-form">
        <div class="col-md-6">
            <div class="delete-container">
                <h2>删除学生</h2>
                <h3>你确定要删除这个学生吗？</h3>
                <div>
                    <h4>学生信息</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">
                            学生编号
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Id)
                        </dd>
                        <dt class="col-sm-4">
                            姓名
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt class="col-sm-4">
                            班级
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.ClassName)
                        </dd>
                        <dt class="col-sm-4">
                            初始密码
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.InitialPassword)
                        </dd>
                    </dl>

                    <form asp-action="DeleteStudent">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="删除" class="btn btn-danger" /> |
                        <a asp-action="ShowAllStudent">返回列表</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>